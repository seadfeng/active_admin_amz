<% cache ['analytics-head-v2', current_store] do%>
    <% unless current_store.preferred_google_ga.blank? %>
        <!-- Google Analytics -->
        <script>
            (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
            
            ga('create', '<%= current_store.preferred_google_ga %>', 'auto', {'useAmpClientId': true} ); 
            // ga('send', 'pageview');  
            
        </script>
        <!-- End Google Analytics -->
    <% end %> 
    <% unless current_store.google_gtag.blank? %>  
        <!-- Global site tag (gtag.js) - Google Analytics 4 -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=<%= current_store.google_gtag %>"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date()); 
            gtag('config', '<%= current_store.google_gtag %>', {'use_amp_client_id': true});
        </script> 
    <% end %>
<% end %>

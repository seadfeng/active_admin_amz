<%= semantic_form_for [:admin, resource ] , builder: ActiveAdmin::FormBuilder do |f| %>   
        <%= f.input :store_id, as: :hidden %> 
        <%= f.input :name , as: :hidden  %>  
        <%= f.inputs do %>
            <%= f.input :taxon_id,  as: :search_select, 
                        url:  admin_store_taxons_path(resource.store), 
                        fields: [:name, :description ], 
                        display_name: :display_name, 
                        minimum_input_length: 2 %>  
            <%= f.input :frontend_controller_id,  as: :search_select, 
                        url: admin_frontend_controllers_path , 
                        fields: [:name, :presentation ], 
                        display_name: 'presentation', 
                        minimum_input_length: 2 %> 
        <% end %>
        <%= f.actions %> 
<% end %>